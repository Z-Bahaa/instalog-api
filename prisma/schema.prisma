generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Action {
  id       String      @id 
  object   String
  name     String
  event_id String     @unique
  event    Event @relation(fields: [event_id], references: [id])
}

model Metadata {
  id           Int      @id @default(autoincrement())
  redirect     String
  description  String
  x_request_id String     @unique
  event_id     String     @unique
  event        Event @relation(fields: [event_id], references: [id])
}

model Event {
  id          String      @id
  object      String
  actor_id    String     
  actor_name  String
  group       String
  target_id   String     
  target_name String
  location    String
  occurred_at String
  metadata    Metadata?
  action      Action?
}
